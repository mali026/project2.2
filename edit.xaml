<Window x:Class="project.edit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:project"
        mc:Ignorable="d"
        Title="edit" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="number_box" HorizontalAlignment="Left" Margin="145,185,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="150" BorderThickness="1,1,1,1" Height="25"/>
        <Label Content="Name:" HorizontalAlignment="Left" Margin="50,90,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="Address_box" HorizontalAlignment="Left" Margin="145,137,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="150" Height="40"/>
        <Label Content="Address:" HorizontalAlignment="Left" Margin="50,137,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="mail_box" HorizontalAlignment="Left" Margin="145,222,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="150" Height="25"/>
        <Label Content="Phone Number:" HorizontalAlignment="Left" Margin="50,185,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="male" Content="Male" HorizontalAlignment="Left" Margin="145,303,0,0" VerticalAlignment="Top" GroupName="Gender" IsChecked="True" Width="50" Height="25" Checked="male_Checked"/>
        <RadioButton x:Name="female" Content="Female" HorizontalAlignment="Left" Margin="207,303,0,0" VerticalAlignment="Top" GroupName="Gender" Width="58" Height="25" Checked="female_Checked"/>
        <Label Content="Email:" HorizontalAlignment="Left" Margin="50,222,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="name_box" HorizontalAlignment="Left" Margin="145,95,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="150" Height="25" TextChanged="name_box_TextChanged"/>
        <Slider x:Name="age_slider" HorizontalAlignment="Left" Margin="145,260,0,0" VerticalAlignment="Top" Width="90" Maximum="100" ValueChanged="Slider_ValueChanged" Height="25"/>
        <TextBlock x:Name="age_block" HorizontalAlignment="Left" Margin="235,260,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="30" Height="25" Background="#FFDFE5F0" Text="0"/>
        <Label Content="Age:" HorizontalAlignment="Left" Margin="50,260,0,0" VerticalAlignment="Top"/>
        <Label Content="Gender:" HorizontalAlignment="Left" Margin="50,297,0,0" VerticalAlignment="Top"/>
        <Border BorderBrush="#FFFFB5B5" BorderThickness="1" Margin="0,1,0,360" Background="#FFFFB5B5"/>

        <Button x:Name="add_button" Width="52" Height="52" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,13,0,0" Background="White" BorderBrush="#00000000" Click="Button_Click">
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center">

                <Image Source="newcontact.png" Width="32" Height="32" />

                <TextBlock Text="Save" FontSize="14" HorizontalAlignment="Center" />
            </StackPanel>
        </Button>
        <Button x:Name="Exit_button" Width="52" Height="52" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="69,14,0,0" Background="White" BorderBrush="#00000000" Click="Button_Click">
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center">

                <Image Source="newcontact.png" Width="32" Height="32" />

                <TextBlock Text="Exit" FontSize="14" HorizontalAlignment="Center" />
            </StackPanel>
        </Button>
        <Label Content="Country:" HorizontalAlignment="Left" Margin="50,337,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="Country_box" HorizontalAlignment="Left" Margin="145,337,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="150" Height="25"/>
        <Label Content="ID:" HorizontalAlignment="Left" Margin="352,90,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="id_box" HorizontalAlignment="Left" Margin="386,90,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="150" Height="25"/>
    </Grid>
</Window>
